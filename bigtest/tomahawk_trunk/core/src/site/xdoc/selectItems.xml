        <!-- Usage -->
        <section name="Usage">
            
	    <source xml:space="preserve">&lt;h:selectOneMenu id="menu1" value="#{selectItemsBean.selectedCarColor}"&gt;
   	&lt;t:selectItems value="#{selectItemsBean.carList}" var="Car" itemLabel="#{Car.type}" itemValue="#{Car.color}" /&gt;
&lt;/h:selectOneMenu&gt;</source>
        </section>
        
        <!-- Syntax -->
        <section name="Syntax">
            
            <blockquote><h3>&lt;s:selectItems&gt;</h3>
                <code>value="value of the selection"</code><br/>
				<code>var="name of the iterator"</code><br/>
				<code>itemLabel="label of a selection option"</code><br/>
				<code>itemValue="value of a selection option"</code><br/>
            </blockquote>
        </section>

        <!-- Additional Information -->
        <section name="Additional Information">
            
	    <p>This component can be used with any selection component. Also it's compatible with RI.</p>
        </section>        

    </body>
    

