<faces-config version="1.2" xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:mfp="http://myfaces.apache.org/maven-faces-plugin"
              xmlns:h="http://java.sun.com/jsf/html"
              xmlns:xi="http://www.w3.org/2001/XInclude">
    <component>
        <description>Renders as text, applying the child f:param values to the value
attribute as a MessageFormat string.  If this element has an ID
or CSS style properties, the text is wrapped in a span element.

Unless otherwise specified, all attributes accept static values
or EL expressions.</description>
        <component-class>javax.faces.component.html.HtmlOutputFormat</component-class>
        <component-type>javax.faces.HtmlOutputFormat</component-type>

        <!-- ################################ defined Properties ################################ -->
        <!-- # from super classes:                                                              # -->
        <!-- #     id, binding, rendered, transient                                             # -->
        <!-- #     value, converter                                                             # -->
        <!-- #################################################################################### -->

        <!-- dir, lang, style, styleClass, title -->
        <xi:include href="../../../includes/html/_UniversalProperties.xml" xpointer="/faces_config/component/*" />

        <xi:include href="../../../includes/html/EscapeProperty.xml" xpointer="/faces_config/component/*" />       

        <component-extension>
            <mfp:component-family>javax.faces.Output</mfp:component-family>
            <mfp:component-superclass>javax.faces.component.UIOutput</mfp:component-superclass>
            <mfp:component-supertype>javax.faces.Output</mfp:component-supertype>

            <mfp:tag-name>h:outputFormat</mfp:tag-name>
            <mfp:tag-class>org.apache.myfaces.taglib.html.HtmlOutputFormatTag</mfp:tag-class>

            <mfp:renderer-type>javax.faces.Format</mfp:renderer-type>
        </component-extension>
    </component>
</faces-config>
